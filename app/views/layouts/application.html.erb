            <li class="nav-item">
              <%= link_to raw("SERVICES<span class='slider'></span> "), 
                          root_path(anchor: "services"), class: "underline active" %>
            </li>
            <li class="nav-item">
              <%= link_to raw("PRODUCTS<span class='slider'></span> "), 
                          root_path(anchor: "product"), class: "underline active" %>
            </li>
            <li class="nav-item">
              <%= link_to raw("CONTACT US<span class='slider'></span> "), 
                          root_path(anchor: "hubungi-kami"), class: "underline active" %>
