<section class="main-section">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-6 prod-detail">
        <%= image_tag @product.get_image("medium"), class: "img-fluid" %>
      </div>
      <div class="col-12 col-sm-6">
        <h2 class="pt-sm-3"><%= @product.name.titleize %></h2>
        <p class="text-muted">
          <%= raw(@product.description) %>
        </p>
      </div>
    </div>
  </div>
</section>
